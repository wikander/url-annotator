{
  "manifest_version": 2,

  "name": "Environment annotator",
  "description": "This extension annotates tabs and corresponding webpages according to the url map given.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "page_action": {
    "default_title": "Annotated!",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "storage"
  ]
}
